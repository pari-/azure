{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "sharedState": { 
      "type": "object",
      "metadata": {
        "Description": "sharedState object"
      }
    } 
  },
  "variables": {
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('sharedState').virtualNetworkName]",
      "location": "[resourceGroup().location]",
      "apiVersion": "[parameters('sharedState').ApiVersion.network]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('sharedState').addressPrefix]"
          ]
        },
        "subnets": [
          {
            "name": "[parameters('sharedState').subnetName]",
            "properties": {
              "addressPrefix": "[parameters('sharedState').subnetPrefix]"
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('sharedState').networkSecurityGroupName]",
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2016-09-01",
      "location": "[resourceGroup().location]",
      "properties": {
          "securityRules": [
              {
                  "name": "default-allow-ssh",
                  "properties": {
                      "priority": 1000,
                      "sourceAddressPrefix": "*",
                      "protocol": "TCP",
                      "destinationPortRange": "22",
                      "access": "Allow",
                      "direction": "Inbound",
                      "sourcePortRange": "*",
                      "destinationAddressPrefix": "*"
                  }
              }
          ]
      }
  }
  ],
  "outputs": {
  }
}
